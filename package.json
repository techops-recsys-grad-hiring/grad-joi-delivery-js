{
  "name": "grad-joi-delivery-javascript",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "node app.js"
  },
  "author": "Thoughtworks",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "jest": "30.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.spec.js"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  },
  "engines": {
    "node": ">=18 <=22"
  }
}
